<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hangapps.herome.Fragments.MainFragment"
    android:background="@drawable/appbg">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/toolbarDark"
            android:elevation="0dp"
            android:minHeight="0dp"
            android:theme="?attr/actionBarTheme"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                app:srcCompat="@drawable/topbannerbar" />
        </android.support.v7.widget.Toolbar>

        <TextView
            android:text="How did you get your powers?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/hero_yellow"
            android:textAlignment="center"
            android:layout_marginTop="20dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/heroes"
            android:id="@+id/imageView4"
            android:paddingTop="20dp"
            android:paddingBottom="20dp" />

        <Button
            android:text="Came by Accident"
            android:layout_width="match_parent"
            android:id="@+id/accidentBtn"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/hero_yellow"
            android:background="@drawable/hero_buttton"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/lightning"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center" />

        <Button
            android:text="Genetic mutation"
            android:layout_width="match_parent"
            android:id="@+id/geneticBtn"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/hero_yellow"
            android:background="@drawable/hero_buttton"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/atomic"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center" />

        <Button
            android:text="Born with them"
            android:layout_width="match_parent"
            android:id="@+id/bornBtn"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/hero_yellow"
            android:background="@drawable/hero_buttton"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/rocket"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center" />

        <Button
            android:text="Choose Powers"
            android:layout_width="match_parent"
            android:id="@+id/chooseBtn"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@android:color/background_dark"
            android:layout_height="60dp"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/hero_buttton"
            android:textSize="24sp"
            android:textStyle="bold"
            android:backgroundTint="@color/hero_yellow" />


    </LinearLayout>
</FrameLayout>
