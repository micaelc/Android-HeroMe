<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hangapps.herome.Fragments.BackstoryFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/appbg">

        <TextView
            android:text="Superman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/hero_yellow"
            android:textAlignment="center"
            android:layout_marginTop="0dp"
            android:paddingBottom="10dp"
            android:paddingTop="15dp"
            android:textAllCaps="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bigsupermanlogo"
                android:id="@+id/imageView" />

            <TextView
                android:text="Backstory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView"
                android:layout_marginLeft="27dp"
                android:layout_marginStart="27dp"
                android:id="@+id/textView2"
                android:textIsSelectable="false"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textAlignment="center" />

            <TextView
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam fermentum augue sit amet leo mattis lacinia. Aenean efficitur justo sit amet libero sagittis ullamcorper. Sed ut arcu ut libero vestibulum accumsan. Curabitur convallis malesuada lectus ac euismod. Donec non posuere ligula. Sed at nulla sed tellus congue vulputate. Vestibulum placerat ante a nisi scelerisque gravida. Nullam eu rutrum arcu. Duis elementum non arcu in scelerisque. Sed pellentesque sollicitudin tristique. Nulla porttitor condimentum libero sed laoreet."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/backstoryTxt"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView" />

        </RelativeLayout>

        <View
            android:id="@+id/SplitLine_hor1"
            android:layout_width="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_height="1dp" />

        <TextView
            android:text="Primary Power"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginStart="30dp"
            android:id="@+id/textView5"
            android:textIsSelectable="false"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="6dp"
            android:textSize="12sp" />

        <Button
            android:text="Turtle Power"
            android:layout_width="match_parent"
            android:id="@+id/primaryBtn"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/hero_yellow"
            android:background="@drawable/hero_buttton"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/turtlepower"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="18sp"
            android:drawableRight="@drawable/itemunselected" />

        <TextView
            android:text="Secondary Power"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginStart="30dp"
            android:id="@+id/textView6"
            android:textIsSelectable="false"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="6dp"
            android:textSize="12sp" />

        <Button
            android:text="Turtle Power"
            android:layout_width="match_parent"
            android:id="@+id/secondaryBtn"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/hero_yellow"
            android:background="@drawable/hero_buttton"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/turtlepower"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="18sp"
            android:drawableRight="@drawable/itemunselected" />

        <Button
            android:text="Start Over"
            android:layout_width="match_parent"
            android:id="@+id/startOverBtn"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@android:color/background_dark"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/hero_buttton"
            android:textSize="24sp"
            android:textStyle="bold"
            android:backgroundTint="@color/hero_yellow" />

    </LinearLayout>
</FrameLayout>
